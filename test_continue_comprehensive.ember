// Comprehensive test for continue statement fix
print("=== Testing Continue in For Loops ===")

// Test 1: Continue in for loop with increment expression
print("Test 1: For loop with increment")
for (i = 0; i < 4; i++) {
    if i == 1 {
        continue
    }
    print(i)
}

// Test 2: Continue in for loop without increment expression
print("Test 2: For loop without increment")
for (j = 0; j < 4;) {
    j = j + 1
    if j == 2 {
        continue  
    }
    print(j)
}

// Test 3: Continue in while loop (should still work)
print("Test 3: While loop")
k = 0
while k < 4 {
    k = k + 1
    if k == 3 {
        continue
    }
    print(k)
}

print("All continue tests passed!")