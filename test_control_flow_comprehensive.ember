# Comprehensive Control Flow Testing

print("=== Testing if/else statements ===")
x = 10
if x > 5 {
    print("x is greater than 5")
} else {
    print("x is not greater than 5")
}

print("=== Testing while loops ===")
i = 0
while i < 3 {
    print("while loop iteration:", i)
    i = i + 1
}

print("=== Testing for loops (basic) ===")
for j = 0; j < 3; j = j + 1 {
    print("for loop iteration:", j)
}

print("=== Testing nested control flow ===")
for k = 0; k < 2; k = k + 1 {
    if k == 0 {
        print("First iteration")
    } else {
        print("Second iteration")
    }
}

print("=== Testing break in while loop ===")
n = 0
while n < 10 {
    if n == 2 {
        print("Breaking at n =", n)
        break
    }
    print("n =", n)
    n = n + 1
}

print("=== Testing break in for loop ===")
for m = 0; m < 10; m = m + 1 {
    if m == 2 {
        print("Breaking at m =", m)
        break
    }
    print("m =", m)
}

print("=== All control flow tests completed ===")
